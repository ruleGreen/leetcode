# The isBadVersion API is already defined for you.
# @param version, an integer
# @return a bool
# def isBadVersion(version):

class Solution:
    def firstBadVersion(self, n):
        """
        :type n: int
        :rtype: int
        """
        l, r = 0, n
        if isBadVersion(0):
            return 0
        else:
            while l <= r:
                mid = (r - l) // 2 + l
                if isBadVersion(mid):
                    r = mid - 1
                else:
                    l = mid + 1
        return l
